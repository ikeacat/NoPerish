<Task xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
    <RegistrationInfo>
        <Date>2021-06-11T8:00:00-05:00</Date>
        <Author>ikeacat (NoPerish)</Author>
        <Version>1.0.0</Version>
        <Description>Starts the NoPerish startup script on logon.</Description>
    </RegistrationInfo>
    <Triggers>
        <LogonTrigger>
            <StartBoundary>2021-06-11T8:00:00-05:00</StartBoundary>
            <EndBoundary>2999-12-31T12:59:59</EndBoundary>
            <Enabled>true</Enabled>
            <UserId>UserName</UserId>
        </LogonTrigger>
    </Triggers>
    <Principals>
        <Principal>
            <GroupId>Builtin\Administrators</GroupId>
        </Principal>
    </Principals>
    <Settings>
        <Enabled>true</Enabled>
        <AllowStartOnDemand>false</AllowStartOnDemand>
        <AllowHardTerminate>true</AllowHardTerminate>
    </Settings>
    <Actions>
        <Exec>
            <Command>start %USERPROFILE%/NoPerish/noperish</Command>
        </Exec>
    </Actions>
</Task>